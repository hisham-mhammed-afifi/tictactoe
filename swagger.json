{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Tic tac toe",
    "description": "This the APIs for TicTacToe Game",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Match",
      "description": "API for matches in the system"
    }
  ],
  "schemes": ["https", "http"],
  "paths": {
    "/users/me": {
      "get": {
        "tags": ["Users"],
        "description": "Get my profile",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthenticated"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/users/signup": {
      "post": {
        "tags": ["Users"],
        "description": "signup a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request. email already exist"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["Users"],
        "description": "login user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "example": {
                "email": "hesham@gmail.com",
                "password": "12345"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "Bad request. Plz provide email & password"
          },
          "401": {
            "description": "Unauthenticated. Invalid Credentials"
          }
        }
      }
    },
    "/match/create": {
      "post": {
        "tags": ["Match"],
        "description": "Create new match",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "match",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstPlayerId": {
                  "type": "string"
                }
              },
              "example": {
                "firstPlayerId": "641c6ee5a1e611670c891b78"
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthenticated. Invalid Credentials"
          }
        }
      }
    },
    "/match/join/{code}": {
      "put": {
        "tags": ["Match"],
        "description": "Join match with code",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Code to join match."
          },
          {
            "name": "match",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "secondPlayerId": {
                  "type": "string"
                }
              },
              "example": {
                "secondPlayerId": "641cbe583dd44b3cde60322f"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "Not Found."
          },
          "401": {
            "description": "Unauthenticated. Invalid Credentials"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "example": {
        "name": "Hesham",
        "email": "hesham@gmail.com",
        "password": "12345"
      }
    },
    "Match": {
      "type": "object",
      "properties": {
        "firstPlayerId": {
          "type": "string"
        },
        "secondPlayerId": {
          "type": "string"
        },
        "joinCode": {
          "type": "string"
        }
      }
    },
    "GameBoard": {
      "type": "object",
      "properties": {
        "matchId": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Bearer token authorization"
    }
  }
}
