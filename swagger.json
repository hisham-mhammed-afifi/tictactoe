{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Tic tac toe",
    "description": "This the APIs for TicTacToe Game",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Matches",
      "description": "API for matches in the system"
    }
  ],
  "schemes": ["http", "https"],
  "paths": {
    "/users": {
      "get": {
        "tags": ["Users"],
        "description": "Get all users",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/users/signup": {
      "post": {
        "tags": ["Users"],
        "description": "signup a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request. email already exist"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["Users"],
        "description": "login user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LoginUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
            "description": "Bad request. Plz provide email & password"
          },
          "401": {
            "description": "Unauthenticated. Invalid Credentials"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "example": {
        "name": "Hesham",
        "email": "hesham@gmail.com",
        "password": "12345"
      }
    },
    "LoginUser": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "example": {
        "email": "hesham@gmail.com",
        "password": "12345"
      }
    },
    "Match": {
      "type": "object",
      "properties": {
        "firstPlayerId": {
          "type": "string"
        },
        "secondPlayerId": {
          "type": "string"
        },
        "currentPlayerId": {
          "type": "string"
        }
      }
    },
    "GameBoard": {
      "type": "object",
      "properties": {
        "matchId": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      }
    }
  }
}
